{
  "name": "fanda-api",
  "version": "3.0.0",
  "description": "Fanda API v3",
  "license": "MIT",
  "main": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/fanda-org/fanda-v3.git"
  },
  "type": "commonjs",
  "scripts": {
    "dev": "node -r ts-node/register --watch --env-file=.env.dev src/index.ts",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "format": "prettier --config .prettierrc.json --write .",
    "start": "npm run build && node --env-file=.env.prod dist/index",
    "prebuild": "rimraf ./dist/",
    "build": "tsc && cp -r package*.json dist/ && cp .env.example dist/.env.example",
    "migration:generate": "typeorm-ts-node-commonjs -d ./src/data-source.ts migration:generate ./src/migrations/initial",
    "migration:run": "typeorm-ts-node-commonjs -d ./src/data-source.ts migration:run"
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "better-sqlite3": "^12.0.0",
    "cache-manager": "^7.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "express-rate-limit": "^7.5.1",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.14.1",
    "pdfmake": "^0.2.20",
    "pg": "^8.16.2",
    "reflect-metadata": "^0.2.2",
    "sqlite": "^5.1.1",
    "typeorm": "^0.3.25",
    "typeorm-naming-strategies": "^4.1.0",
    "uuid": "^11.1.0",
    "winston": "^3.17.0",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@biomejs/biome": "2.0.4",
    "@eslint/js": "9.29.0",
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.0.3",
    "@types/pdfmake": "^0.2.11",
    "@types/uuid": "^10.0.0",
    "eslint": "^9.29.0",
    "prettier": "^3.6.0",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "8.34.1"
  }
}
